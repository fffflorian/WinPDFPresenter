<Window
    x:Class="WinPDFPresenter.Views.StartSelection"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WinPDFPresenter.ViewModels"
    Title="StartSelection"
    d:DesignHeight="720"
    d:DesignWidth="480"
    x:DataType="vm:StartSelectionViewModel"
    Background="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/presenter-logo.ico"
    TransparencyLevelHint="AcrylicBlur"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:StartSelectionViewModel />
    </Design.DataContext>
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.15"
                    TintColor="Black"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Grid
            Margin="15,35"
            RowDefinitions="1*,1*"
            ShowGridLines="False">
            <TabControl Grid.Row="0" Margin="15">
                <TabItem Header="General">
                    <StackPanel Margin="15,50,15,100" Background="Transparent">
                        <RadioButton
                            x:Name="SelectionEdit"
                            Content="Edit/Create a .pdfnotes file"
                            FontSize="18"
                            GroupName="Workings" />
                        <RadioButton
                            x:Name="SelectionPresent"
                            Content="Present a PDF"
                            FontSize="18"
                            GroupName="Workings"
                            IsChecked="True" />
                        <CheckBox
                            Name="SelectionNewFileEdit"
                            Margin="0,20"
                            FontSize="18">
                            There is no prior .pdfnotes files.
                        </CheckBox>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Resolution">
                    <StackPanel Margin="5,10" Background="Transparent">
                        <StackPanel Margin="5,10" Background="Transparent">
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                FontSize="18"
                                Text="Depth per Inch (DPI):" />
                            <TextBlock
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Text="{Binding #SliderDpi.Value}" />
                            <Slider
                                x:Name="SliderDpi"
                                IsSnapToTickEnabled="True"
                                Maximum="900"
                                Minimum="300"
                                TickFrequency="10"
                                TickPlacement="Outside"
                                Value="{Binding Dpi}" />
                        </StackPanel>
                        <StackPanel Margin="5,10" Background="Transparent">
                            <TextBlock
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontSize="18"
                                Text="Width of the generated Images:" />
                            <NumericUpDown
                                AllowSpin="True"
                                FormatString="0"
                                Increment="10"
                                Maximum="7680"
                                Minimum="720"
                                Value="{Binding Width}" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <Button
                Name="PdfFileSelectorButton"
                Grid.Row="1"
                Width="350"
                Height="120"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="PdfFileSelectorButton_OnClick">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold">
                    Select PDF-File
                </TextBlock>
            </Button>
        </Grid>
    </Panel>
</Window>
