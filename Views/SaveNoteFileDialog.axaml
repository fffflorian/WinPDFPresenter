<Window
    x:Class="WinPDFPresenter.Views.SaveNoteFileDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WinPDFPresenter.ViewModels"
    xmlns:vm="using:WinPDFPresenter.ViewModels"
    Title="SaveNoteFileDialog"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:SaveNoteFileViewModel"
    CanResize="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:SaveNoteFileViewModel />
    </Design.DataContext>
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.45"
                    TintColor="Black"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Grid Margin="20" RowDefinitions="Auto, Auto, Auto, Auto, *">
            <TextBlock
                Grid.Row="0"
                Margin="20,20,20,10"
                Text="Small Values:"
                TextAlignment="Center" />
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Margin="0,5">Duration of the presentation (in Minutes):</TextBlock>
                <NumericUpDown
                    Name="InputDuration"
                    FormatString="0"
                    Increment="1"
                    Maximum="900"
                    Minimum="1"
                    Value="25" />
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="20">
                <TextBlock Margin="0,5">Number of "final" minutes (indicated by colour change):</TextBlock>
                <NumericUpDown
                    Name="InputLastMinutes"
                    FormatString="0"
                    Increment="1"
                    Maximum="{Binding #InputDuration.Value}"
                    Minimum="1"
                    Value="5" />
            </StackPanel>
            <StackPanel Grid.Row="3" Margin="20">
                <TextBlock Margin="0,5">Font size used to display notes:</TextBlock>
                <NumericUpDown
                    Name="InputFontSize"
                    FormatString="0"
                    Increment="1"
                    Maximum="45"
                    Minimum="1"
                    Value="20" />
            </StackPanel>
            <Button
                Grid.Row="4"
                Width="150"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="SkyBlue"
                Click="SaveFile">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Black">
                    Save File.
                </TextBlock>
            </Button>
        </Grid>
    </Panel>
</Window>
